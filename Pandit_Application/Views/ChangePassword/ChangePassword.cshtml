@model Pandit_ApplicationEntity.ProfilePageModel

@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<style>
    img {
        border-radius: 50%;
    }

    tr {
        width: 100%;
    }

    td {
        width: 55%;
        padding-bottom: 10px
    }

    a:hover {
        cursor: pointer;
    }

    .button {
        background-color: #ff880e;
        border: 1px solid #ff880e;
        color: white;
        padding: 16px 32px;
        text-align: center;
        font-size: 16px;
        margin: 4px 2px;
        /*opacity: 0.6;*/
        transition: 0.3s;
        display: inline-block;
        text-decoration: none;
        cursor: pointer;
        line-height: 20px;
        text-transform: uppercase;
        border-radius: 50px;
        width: 235px;
        height: 50px;
    }

        .button:hover {
            opacity: 1;
            background-color: #fff;
            color: #ff7e00;
            border: 1px solid #ff880e;
        }

    .w3-black, .w3-hover-black:hover {
        color: #413dae !important;
        background-color: #fff !important;
    }

    .w3-black, .w3-hover-black {
        color: #413dae !important;
        background-color: #fff !important;
    }
</style>
<style>
    .modal-contents {
        border: 1px solid #ff7e00;
        padding-bottom: 2%;
        border-radius: 3px;
        box-shadow: 0 2px 16px 0 #ff7e00;
        border-radius: 6px;
        margin-bottom: 6%;
        min-height: 262px;
        margin-top: 4%;
    }

    label {
        font-weight: normal;
    }
    input[type=password]:focus {
        border: 2px solid #ff880e;
    }

    select:focus {
        border: 2px solid #ff880e;
    }

    input[type=checkbox]:focus {
        border: 2px solid #ff880e;
    }

    input[type=file]:focus {
        border: 2px solid #ff880e;
    }

    textarea:focus {
        border: 2px solid #ff880e;
    }
</style>
<!-- hs About Title Start -->
<div class="hs_indx_title_main_wrapper">
    <div class="hs_title_img_overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 full_width">
                <div class="hs_indx_title_left_wrapper">
                    <h2>Change password</h2>
                </div>
            </div>

        </div>
    </div>
</div>
<div class="hs_kd_sidebar_main_wrapper hs_num_sidebar_main_wrapper">
    <div class="container">
        <div class="w3-container">

            <div id="id01" class="w3-modal">
                <div class="w3-modal-content">
                    <div class="w3-container">
                        <span onclick="document.getElementById('id01').style.display='none'" class="w3-button w3-display-topright">&times;</span>
                        <p style="padding: 40px 20px 0px;">
                            We are sorry to see you go! If you choose to delete your account you wont be able to retrieve any saved
                            information or report or reopen your account and also you will loose the balance, if any, in your wallet, Are you sure you want to delete your account.
                        </p>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="hs_contact_indx_form_btn" style="padding-bottom:40px">
                                    <ul>
                                        <li><a typeof="button" onclick="deleteconfirmation()" style="font-size:16px">Delete</a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="hs_contact_indx_form_btn" style="padding-bottom:40px">
                                    <ul>
                                        <li><a typeof="button" onclick="document.getElementById('id01').style.display='none'" style="font-size:16px">Cancel</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-4 col-xs-4">

            </div>
            <div class="col-lg-5 col-md-5 col-sm-4 col-xs-4 modal-contents" style=" margin-top: 70px;">
                <div class="card card_border p-md-4">
                    <div class="card-body">
                        <!-- form -->
                        <form action="#" method="GET">
                            <div class="register__header text-left mb-4">
                                @*<h3 class="register__title mb-2" style="color:#ff7e00"> Forgot Password</h3>*@
                                @*<p style="padding:20px">
                                        Please enter the registered email address for your account. A reset link will be sent on your registered email.
                                    </p>*@
                            </div>

                            <div class="hs_kd_six_sec_input_wrapper" style="padding:0px 20px">
                                <label>Old password</label>

                                @Html.TextBoxFor(model => model.oldpassword, new { @type = "password", @id = "txtoldpass", @required = "true" })

                            </div>
                            <div class="hs_kd_six_sec_input_wrapper" style="padding:0px 20px">
                                <label>New password</label>
                                @Html.TextBoxFor(model => model.newpassword, new { @type = "password", @id = "txtnewpass", @required = "true" })
                            </div>
                            <div class="hs_kd_six_sec_input_wrapper" style="padding:0px 20px">
                                <label>Re-enter new password</label>
                                @Html.TextBoxFor(model => model.confirmpassword, new { @type = "password", @id = "txtconfirmpass", @required = "true" })
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="hs_pp_bottom_btn_wrapper">
                                    <div class="hs_pp_bottom_btn">
                                        <ul>
                                            <li><button class="button" type="button" onclick="Changepassword()">Submit</button></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>

                            
                        </form>
                        <!-- //form -->
                        <p class="backtohome mt-4">
                            <button onclick="document.getElementById('id01').style.display='block'" class="w3-button w3-black" style="background-color:white;color:white;float: right;">Delete my account</button>

                        </p>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- hs About Title End -->